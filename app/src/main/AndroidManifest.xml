<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cite.kidpick">


    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.KidPick">
        <service android:enabled="true" android:name="BackgroundSoundService" />
        <activity android:name=".MemoryGame"></activity>
        <activity android:name=".GameDifficulty" />
        <activity android:name=".FlashCards" />
        <activity android:name=".GameCategory" />
        <activity android:name=".FlashCardCategory" />
        <activity android:name=".HomeScreen" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>